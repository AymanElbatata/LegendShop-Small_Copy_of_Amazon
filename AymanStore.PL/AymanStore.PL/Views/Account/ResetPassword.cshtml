@model AymanStore.PL.DTO.ResetPasswordDTO

@{
    ViewData["Title"] = "Reset Password";
}


<style>


    /* Registration Container */
    .registration-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        flex-grow: 1;
        padding: 40px 0;
    }

    .registration-box {
        background-color: white;
        border-radius: 4px;
        padding: 20px 26px;
        width: 400px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .registration-title {
        font-weight: 400;
        font-size: 28px;
        margin-bottom: 20px;
        color: #232F3E;
    }

    .form-group {
        margin-bottom: 14px;
    }

    .form-label {
        display: block;
        font-weight: 700;
        font-size: 13px;
        margin-bottom: 2px;
        padding-left: 2px;
    }

    .form-input, .form-select {
        width: 100%;
        height: 31px;
        padding: 3px 7px;
        border: 1px solid #a6a6a6;
        border-radius: 3px;
        font-size: 13px;
        background-color: white;
    }

        .form-input:focus, .form-select:focus {
            outline: none;
            border-color: #e77600;
            box-shadow: 0 0 3px 2px rgba(228, 121, 17, 0.5);
        }

    .text-danger {
        color: #c40000;
        font-size: 12px;
        margin-top: 3px;
        display: block;
    }

    .registration-btn {
        width: 100%;
        background: linear-gradient(to bottom, #f7dfa5, #f0c14b);
        border: 1px solid #a2a6ac;
        border-radius: 3px;
        padding: 8px 0;
        font-size: 13px;
        cursor: pointer;
        margin-top: 10px;
    }

        .registration-btn:hover {
            background: linear-gradient(to bottom, #f5d78e, #eeb933);
        }

        .registration-btn:disabled {
            background: #e7e9ec;
            cursor: not-allowed;
        }

    .registration-agreement {
        font-size: 12px;
        margin: 18px 0;
        line-height: 1.5;
    }

    .registration-divider {
        text-align: center;
        position: relative;
        margin: 20px 0;
        font-size: 12px;
        color: #767676;
    }

        .registration-divider::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background-color: #e7e7e7;
            z-index: 1;
        }

        .registration-divider span {
            background-color: white;
            padding: 0 8px;
            position: relative;
            z-index: 2;
        }

    .login-redirect {
        text-align: center;
        margin-top: 20px;
        font-size: 13px;
    }


    /* Name fields layout */
    .name-fields {
        display: flex;
        gap: 10px;
    }

        .name-fields .form-group {
            flex: 1;
        }

    /* Validation Summary */
    .validation-summary {
        color: #c40000;
        background-color: #ffdfdf;
        padding: 10px;
        border-radius: 3px;
        margin-bottom: 15px;
        font-size: 13px;
    }

        .validation-summary ul {
            margin-left: 15px;
        }

</style>

<div class="container">
    <div class="breadcrumb">
        <span>Account > Reset Password</span>
        <span class="text-center ms-2 px-2" style="color:green">@ViewBag.Message</span>
    </div>
</div>

<!-- Registration Container -->
<div class="registration-container">

    <div class="registration-box">
        <h1 class="registration-title">Reset Password</h1>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <form id="registrationForm" method="post" asp-controller="Account" asp-action="ResetPassword">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="form-label" for="email">Email</label>
                <input type="text" id="email" name="email" class="form-input" asp-for="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span id="emailError" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" for="password">Password</label>
                <input type="password" id="password" name="password" class="form-input" asp-for="Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
                <span id="passwordError" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" for="confirmPassword">Re-enter password</label>
                <input type="password" value="Aym@1111" id="confirmPassword" name="confirmPassword" class="form-input" asp-for="ConfirmPassword" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <span id="confirmPasswordError" class="text-danger"></span>
            </div>

            <div class="name-fields">
                <div class="form-group">
                    <label class="form-label" for="resetCode">Reset Code</label>
                    <input type="text" id="resetCode" name="resetCode" class="form-input" asp-for="ResetCode" required />
                    <span asp-validation-for="ResetCode" class="text-danger"></span>
                    <span id="resetCodeError" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" id="registerButton" class="registration-btn">Reset New Password</button>
        </form>

        <p class="registration-agreement">
            By creating an account, you agree to Ayman's Shop's
            <a asp-controller="Home" asp-action="ConditionsofUse" style="color: #0066C0;">Conditions of Use</a> and
            <a asp-controller="Home" asp-action="PrivacyNotice" style="color: #0066C0;">Privacy Notice</a>.
        </p>

        <div class="registration-divider">
            <span>Already have an account?</span>
        </div>

        <div class="login-redirect">
            <a asp-controller="Account" asp-action="Login" style="color: #0066C0;">
                Sign in to your account
            </a>
        </div>
    </div>
</div>






 <script>
        $(document).ready(function() {
            // Form validation
            $('#registrationForm').on('submit', function(e) {
                let isValid = true;
                
                // Reset error messages
                $('.text-danger').text('');
                
                // Validate email
                const email = $('#email').val().trim();
                if (!email) {
                    $('#emailError').text('Please enter your email address');
                    isValid = false;
                } else if (!isValidEmail(email)) {
                    $('#emailError').text('Please enter a valid email address');
                    isValid = false;
                }
                
                // Validate password
                const password = $('#password').val();
                if (!password) {
                    $('#passwordError').text('Please enter your password');
                    isValid = false;
                } else if (password.length < 6) {
                    $('#passwordError').text('Password must be at least 6 characters long');
                    isValid = false;
                }
                
                // Validate confirm password
                const confirmPassword = $('#confirmPassword').val();
                if (!confirmPassword) {
                    $('#confirmPasswordError').text('Please confirm your password');
                    isValid = false;
                } else if (password !== confirmPassword) {
                    $('#confirmPasswordError').text('Passwords do not match');
                    isValid = false;
                }
                
                // Validate first name
                const resetCode = $('#resetCode').val().trim();
                if (!resetCode) {
                $('#resetCodeError').text('Please enter your Reset Code');
                    isValid = false;
                }
               
                
                // Prevent form submission if validation fails
                if (!isValid) {
                    e.preventDefault();
                }
            });

        // Email validation function
            function isValidEmail(email) {
                const re = /^(([^<>()\[\]\\.,;:\s@@"]+(\.[^<>()\[\]\\.,;:\s@@"]+)*)|(".+"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z0-9-]+\.)+[a-zA-Z]{2,}))$/;
                return re.test(String(email).toLowerCase());
            }
            
            // Real-time validation
            $('#email').on('blur', function() {
                const email = $(this).val().trim();
                if (!email) {
                    $('#emailError').text('Please enter your email address');
                } else if (!isValidEmail(email)) {
                    $('#emailError').text('Please enter a valid email address');
                } else {
                    $('#emailError').text('');
                }
            });
            
            $('#password').on('blur', function() {
                const password = $(this).val();
                if (!password) {
                    $('#passwordError').text('Please enter your password');
                } else if (password.length < 6) {
                    $('#passwordError').text('Password must be at least 6 characters long');
                } else {
                    $('#passwordError').text('');
                }
            });
            
            $('#confirmPassword').on('blur', function() {
                const confirmPassword = $(this).val();
                const password = $('#password').val();
                if (!confirmPassword) {
                    $('#confirmPasswordError').text('Please confirm your password');
                } else if (password !== confirmPassword) {
                    $('#confirmPasswordError').text('Passwords do not match');
                } else {
                    $('#confirmPasswordError').text('');
                }
            });
            
            $('#resetCode').on('blur', function() {
                const resetCode = $(this).val().trim();
                if (!resetCode) {
                    $('#resetCodeError').text('Please enter your first name');
                } else {
                    $('#resetCodeError').text('');
                }
            });
            
 
        });
    </script>