@model AymanStore.PL.DTO.LoginDTO

@{
    ViewData["Title"] = "Login";
}

<style>

    /* Login Container */
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-grow: 1;
        padding: 40px 0;
    }

    .login-box {
        background-color: white;
        border-radius: 4px;
        padding: 20px 26px;
        width: 350px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .login-title {
        font-weight: 400;
        font-size: 28px;
        margin-bottom: 10px;
    }

    .form-group {
        margin-bottom: 14px;
    }

    .form-label {
        display: block;
        font-weight: 700;
        font-size: 13px;
        margin-bottom: 2px;
        padding-left: 2px;
    }

    .form-input {
        width: 100%;
        height: 31px;
        padding: 3px 7px;
        border: 1px solid #a6a6a6;
        border-radius: 3px;
        font-size: 13px;
    }

        .form-input:focus {
            outline: none;
            border-color: #e77600;
            box-shadow: 0 0 3px 2px rgba(228, 121, 17, 0.5);
        }

    .text-danger {
        color: #c40000;
        font-size: 12px;
        margin-top: 3px;
    }

    .login-btn {
        width: 100%;
        background: linear-gradient(to bottom, #f7dfa5, #f0c14b);
        border: 1px solid #a2a6ac;
        border-radius: 3px;
        padding: 8px 0;
        font-size: 13px;
        cursor: pointer;
        margin-top: 10px;
    }

        .login-btn:hover {
            background: linear-gradient(to bottom, #f5d78e, #eeb933);
        }

    .login-agreement {
        font-size: 12px;
        margin: 18px 0;
        line-height: 1.5;
    }

    .login-help {
        font-size: 13px;
        margin-top: 20px;
    }

    .login-divider {
        text-align: center;
        position: relative;
        margin: 20px 0;
        font-size: 12px;
        color: #767676;
    }

        .login-divider::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background-color: #e7e7e7;
            z-index: 1;
        }

        .login-divider span {
            background-color: white;
            padding: 0 8px;
            position: relative;
            z-index: 2;
        }

    .create-account-btn {
        width: 100%;
        background: linear-gradient(to bottom, #f8f9fa, #e7e9ec);
        border: 1px solid #a2a6ac;
        border-radius: 3px;
        padding: 8px 0;
        font-size: 13px;
        cursor: pointer;
        text-decoration: none;
        color: #0F1111;
        display: inline-block;
        text-align: center;
    }

        .create-account-btn:hover {
            background: linear-gradient(to bottom, #e7eaf0, #d9dce1);
        }



    /* Validation Summary */
    .validation-summary {
        color: #c40000;
        background-color: #ffdfdf;
        padding: 10px;
        border-radius: 3px;
        margin-bottom: 15px;
        font-size: 13px;
    }

        .validation-summary ul {
            margin-left: 15px;
        }

</style>

<div class="container">
    <div class="breadcrumb">
        <span>Account > Login</span>
        <span class="text-center ms-2 px-2" style="color:green">@ViewBag.Message</span>
    </div>
</div>

<!-- Login Container -->
<div class="login-container">

    <div class="login-box">
        <h1 class="login-title">Sign in</h1>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <form id="myloginform" method="post" asp-controller="Account" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl" value="@ViewData["ReturnUrl"]" />

            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="form-label" for="email">Email</label>
                <input type="text" id="email" name="email" class="form-input" asp-for="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span id="emailError" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" for="password">Password</label>
                <input type="password" id="password" name="password" class="form-input" asp-for="Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
                <span id="passwordError" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>
                    <input type="checkbox" asp-for="RememberMe" /> Remember me
                </label>
            </div>

            <button type="submit" class="login-btn">Sign in</button>
        </form>

        <p class="login-agreement">
            By continuing, you agree to Ayman's Shop's
            <a asp-controller="Home" asp-action="ConditionsofUse" style="color: #0066C0;">Conditions of Use</a> and
            <a asp-controller="Home" asp-action="PrivacyNotice" style="color: #0066C0;">Privacy Notice</a>.
        </p>

        <div class="login-help">
            <a asp-controller="Account" asp-action="ForgetPassword" style="color: #0066C0;">
                <i class="fas fa-caret-right"></i> Forget Password?
            </a>
        </div>

@*         <div class="login-help">
            <a asp-controller="Account" asp-action="Activation" style="color: #0066C0;">
                <i class="fas fa-caret-right"></i> Activate Account?
            </a>
        </div> *@

        <div class="login-help">
            <a asp-controller="Home" asp-action="HelpPage" style="color: #0066C0;">
                <i class="fas fa-caret-right"></i> Need help?
            </a>
        </div>

        <div class="login-divider">
            <span>New to Legend Shop?</span>
        </div>


        <a asp-controller="Account" asp-action="Register" class="create-account-btn">
            Create your Legend Shop account
        </a>
    </div>
</div>

    <script>
        $(document).ready(function() {
            // Form validation
        $('#myloginform').on('submit', function(e) {

                let isValid = true;
                
                // Reset error messages
                $('.text-danger').text('');
                
                // Validate email
                const email = $('#email').val().trim();
                if (!email) {
                    $('#emailError').text('Please enter your email address');
                    isValid = false;
                } else if (!isValidEmail(email)) {
                    $('#emailError').text('Please enter a valid email address');
                    isValid = false;
                }
                
                // Validate password
                const password = $('#password').val();
                if (!password) {
                    $('#passwordError').text('Please enter your password');
                    isValid = false;
                } else if (password.length < 6) {
                    $('#passwordError').text('Password must be at least 6 characters long');
                    isValid = false;
                }
                
                // Prevent form submission if validation fails
                if (!isValid) {
                    e.preventDefault();
                }
            });
            
            // Email validation function
                function isValidEmail(email) {
                    const re = /^(([^<>()\[\]\\.,;:\s@@"]+(\.[^<>()\[\]\\.,;:\s@@"]+)*)|(".+"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z0-9-]+\.)+[a-zA-Z]{2,}))$/;
                    return re.test(String(email).toLowerCase());
                }
            
            // Real-time validation
            $('#email').on('blur', function() {
                const email = $(this).val().trim();
                if (!email) {
                    $('#emailError').text('Please enter your email address');
                } else if (!isValidEmail(email)) {
                    $('#emailError').text('Please enter a valid email address');
                } else {
                    $('#emailError').text('');
                }
            });
            
            $('#password').on('blur', function() {
                const password = $(this).val();
                if (!password) {
                    $('#passwordError').text('Please enter your password');
                } else if (password.length < 6) {
                    $('#passwordError').text('Password must be at least 6 characters long');
                } else {
                    $('#passwordError').text('');
                }
            });
        });
    </script>