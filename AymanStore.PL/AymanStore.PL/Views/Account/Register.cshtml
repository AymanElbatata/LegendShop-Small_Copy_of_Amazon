@model AymanStore.PL.DTO.RegisterDTO

@{
    ViewData["Title"] = "Register";
}


<style>


    /* Registration Container */
    .registration-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        flex-grow: 1;
        padding: 40px 0;
    }

    .registration-box {
        background-color: white;
        border-radius: 4px;
        padding: 20px 26px;
        width: 400px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .registration-title {
        font-weight: 400;
        font-size: 28px;
        margin-bottom: 20px;
        color: #232F3E;
    }

    .form-group {
        margin-bottom: 14px;
    }

    .form-label {
        display: block;
        font-weight: 700;
        font-size: 13px;
        margin-bottom: 2px;
        padding-left: 2px;
    }

    .form-input, .form-select {
        width: 100%;
        height: 31px;
        padding: 3px 7px;
        border: 1px solid #a6a6a6;
        border-radius: 3px;
        font-size: 13px;
        background-color: white;
    }

        .form-input:focus, .form-select:focus {
            outline: none;
            border-color: #e77600;
            box-shadow: 0 0 3px 2px rgba(228, 121, 17, 0.5);
        }

    .text-danger {
        color: #c40000;
        font-size: 12px;
        margin-top: 3px;
        display: block;
    }

    .registration-btn {
        width: 100%;
        background: linear-gradient(to bottom, #f7dfa5, #f0c14b);
        border: 1px solid #a2a6ac;
        border-radius: 3px;
        padding: 8px 0;
        font-size: 13px;
        cursor: pointer;
        margin-top: 10px;
    }

        .registration-btn:hover {
            background: linear-gradient(to bottom, #f5d78e, #eeb933);
        }

        .registration-btn:disabled {
            background: #e7e9ec;
            cursor: not-allowed;
        }

    .registration-agreement {
        font-size: 12px;
        margin: 18px 0;
        line-height: 1.5;
    }

    .registration-divider {
        text-align: center;
        position: relative;
        margin: 20px 0;
        font-size: 12px;
        color: #767676;
    }

        .registration-divider::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background-color: #e7e7e7;
            z-index: 1;
        }

        .registration-divider span {
            background-color: white;
            padding: 0 8px;
            position: relative;
            z-index: 2;
        }

    .login-redirect {
        text-align: center;
        margin-top: 20px;
        font-size: 13px;
    }


    /* Name fields layout */
    .name-fields {
        display: flex;
        gap: 10px;
    }

        .name-fields .form-group {
            flex: 1;
        }

    /* Validation Summary */
    .validation-summary {
        color: #c40000;
        background-color: #ffdfdf;
        padding: 10px;
        border-radius: 3px;
        margin-bottom: 15px;
        font-size: 13px;
    }

        .validation-summary ul {
            margin-left: 15px;
        }

</style>

<div class="container">
    <div class="breadcrumb">
        <span>Account > Register</span>
    </div>
</div>

<!-- Registration Container -->
<div class="registration-container">

    <div class="registration-box">
        <h1 class="registration-title">Create Account</h1>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <form id="registrationForm" method="post" asp-controller="Account" asp-action="Register">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="form-label" for="email">Email</label>
                <input type="text" id="email" name="email" class="form-input" asp-for="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span id="emailError" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" for="password">Password</label>
                <input type="password" id="password" name="password" class="form-input" asp-for="Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
                <span id="passwordError" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" for="confirmPassword">Re-enter password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" asp-for="ConfirmPassword" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <span id="confirmPasswordError" class="text-danger"></span>
            </div>

            <div class="name-fields">
                <div class="form-group">
                    <label class="form-label" for="firstName">First Name</label>
                    <input type="text" id="firstName" name="firstName" class="form-input" asp-for="FirstName" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    <span id="firstNameError" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" for="lastName">Last Name</label>
                    <input type="text" id="lastName" name="lastName" class="form-input" asp-for="LastName" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                    <span id="lastNameError" class="text-danger"></span>
                </div>
            </div>

@*             <div class="form-group">
                <label class="form-label" for="genderTBLId">Gender</label>
                <select id="genderTBLId" name="genderTBLId" class="form-select" required>
                    <option value="">Select Gender</option>
                    @foreach (var gender in Model.GenderOptions)
                    {
                        <option value="@gender.Value">@gender.Text</option>
